<!DOCTYPE html>
<html lang="en">

<head>
   <meta charset="UTF-8">
   <meta http-equiv="X-UA-Compatible" content="IE=edge">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>Blog</title>
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
   <link href="/css/styles.css" rel="stylesheet">

</head>


<body class="bg-light">
   <div class="container bg-dark text-white">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark text-white p-6 ">
         <a class="nav-link active mt-3 ml-3 p-3" aria-current="page" href="/blog"><img
               src="https://cdn.worldvectorlogo.com/logos/insite-vision.svg" class="logoImg"></a>
         <div class="mt-4 ml-4 p-3 navbar-nav textsNavBar d-flex justify-content-center align-items-center">
            <a class="hoverWhite textown nav-link active text-secondary" aria-current="page" href="/blog">Home</a>
            <a class="hoverWhite textDown nav-link active text-secondary" aria-current="page"
               href="/admin">Administration</a>
         </div>
      </nav>
      <section class="p-5">
         <div class="row">
            <hr class="my-12">
            <h1 class="fw-bold text-center tituloBlog">THE BLOG</h1>
            <hr class="my-12">
         </div>
         <div class="row d-flex justify-content-center align-items-center">
            <div class="col-xl-6 col-md-12 d-flex justify-content-between align-space-between">
               <a class="text-decoration-none text-reset" href="/blog/<%=orderedBlogs[0].slug%>">
                  <div class="card w-90 d-inline-block h-90 bg-transparent border-0">

                     <% if (orderedBlogs[0].image.includes("https")) { %>
                        <img src=<%=orderedBlogs[0].image %> class="card-img-top"
                        alt="articleImage">
                        <% }else{ %>
                           <img src=<%="/images/blogs/" + orderedBlogs[0].image %> class="card-img-top"
                           alt="articleImage">
                           <% } %>
                              <div class="card-body">
                                 <div class="text-secondary">
                                    <%= orderedBlogs[0].date%>
                                 </div>
                                 <h4 class="fw-bold">
                                    <%= orderedBlogs[0].title%>
                                 </h4>
                                 <p class="card-text text-secondary">
                                    <%= orderedBlogs[0].content%>
                                 </p>
                              </div>
                  </div>
               </a>
            </div>
            <div class="col-xl-6 col-md-12">
               <% let cont=orderedBlogs.length; %>
                  <% if(cont>4){ %>
                     <% cont=4; %>
                        <% } %>
                           <% for(let i=1; i<cont; i++) { %>
                              <a class="text-decoration-none text-reset" href="/blog/<%=orderedBlogs[i].slug%>">
                                 <div class="card mb-3 border-0  bg-transparent" style="max-width: 540px;">
                                    <div class="row g-0 d-flex justify-content-center align-items-center">
                                       <div class="col-lg-5 col-md-3  smnone">
                                          <% if (orderedBlogs[i].image.includes("http")) { %>
                                             <img src=<%=orderedBlogs[i].image %> class="card-img-top"
                                             alt="articleImage">
                                             <% }else{ %>
                                                <img src=<%="/images/blogs/" + orderedBlogs[i].image %>
                                                class="card-img-top"
                                                alt="articleImage">
                                                <% } %>
                                       </div>
                                       <div class="col-lg-7 col-md-9 col-sm-7 col-7">
                                          <div class="card-body">
                                             <div class="text-secondary">
                                                <%= orderedBlogs[i].createdAt;%>
                                             </div>
                                             <h4 class="fw-bold">
                                                <%= orderedBlogs[i].title%>
                                             </h4>
                                          </div>
                                       </div>
                                    </div>
                                 </div>
                              </a>
                              <hr class="my-12">
                              <% } %>
            </div>
      </section>
   </div>
   <div class="container bg-white ">
      <section class="p-5">
         <% if(orderedBlogs.length>4){ %>
            <h5 class="mb-4 mt-4 text-secondary fw-light">More Articles</h5>
            <div class="row">
               <% for(let i=4; i<orderedBlogs.length; i++){ %>
                  <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-4 col-xxl-3">
                     <a class="text-decoration-none text-reset" href="/blog/<%=orderedBlogs[i].slug%>">
                        <div class="card border-0" style="width: 18rem;">
                           <% if (orderedBlogs[i].image.includes("http")) { %>
                              <img src=<%=orderedBlogs[i].image %> class="card-img-top"
                              alt="articleImage">
                              <% }else{ %>
                                 <img src=<%="/images/blogs/" + orderedBlogs[i].image %>
                                 class="card-img-top"
                                 alt="articleImage">
                                 <% } %>
                                    <div class="card-body">
                                       <div class="text-secondary">
                                          <%= orderedBlogs[i].date%>
                                       </div>
                                       <h3>
                                          <%= orderedBlogs[i].title%>
                                       </h3>
                                       <p class="card-text text-secondary">
                                          <%= orderedBlogs[i].content%>
                                       </p>
                                    </div>
                        </div>
                     </a>
                  </div>
                  <% } %>
                     <% } %>
            </div>

      </section>
   </div>
</body>

</html>